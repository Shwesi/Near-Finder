    <application
        android:name=".FirebaseChatMainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider1234"
            android:exported="true"
            android:theme="@style/FullyTranslucent" />

        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".activity.LoginActvity"
            android:label="@string/log_in"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppThemeWithoutDrawer" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".activity.SignupActvity"
            android:label="@string/sign_up"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppThemeWithoutDrawer" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".activity.Splash"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".activity.ResetPassword"
            android:parentActivityName=".activity.LoginActvity"
            android:theme="@style/AppThemeWithoutDrawer" />
        <activity

            android:name=".activity.HomeActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".fragment.ChatFragment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:name=".fragment.MapFragment"
            android:theme="@style/AppThemeWithoutDrawer" />


        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_api_key_default" />
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".MainActivity" />
        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />

        <service android:name=".service.LocationTracker" />
        <service android:name=".fcm.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".fcm.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".service.AppKilled"
            android:stopWithTask="false" />
