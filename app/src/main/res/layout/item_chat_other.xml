<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:layout_alignParentRight="true"
    android:clickable="true"
    android:orientation="horizontal"
  >
<LinearLayout
    android:layout_alignParentRight="true"
    android:gravity="right"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_toRightOf="@+id/profilePic"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/linearlayout"
        android:background="@drawable/chat1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_view_chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            tools:text="Hello mate gfgfgfghfgfghhghgfhfghfghfghdfghhhghfgfgfg " />
        <TextView
            android:id="@+id/timestamp"
            android:layout_gravity="right"
            android:textSize="12sp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:text="2:02"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_gravity="left"
        android:layout_toRightOf="@+id/profilePic"
        android:id="@+id/imageView"
        android:visibility="gone"
        android:src="@drawable/restaurants"
        android:background="@drawable/imageview_border"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_toRightOf="@+id/text_view_chat_message"
        android:layout_gravity="right"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profilePic"
        android:src="@drawable/profile_ico"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:civ_border_width="1dp"
        app:civ_border_color="#fff"/>
